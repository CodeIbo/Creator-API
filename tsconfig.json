{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "strict": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": ".",
    "baseUrl": ".",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "paths": {
      "@db/*": [
        "src/db/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@controllers/*": [
        "src/controllers/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@guards/*": [
        "src/guards/*"
      ],
      "@middleware/*": [
        "src/middleware/*"
      ]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src",
    "package.json",
    "jest.config.js",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    ".env",
    "src/db/init.sql",
    "api.postman_collection.json"
  ]
}